<script type="text/javascript">
/* SEND CONTACT
* ------------------------------------------------------ */
$(".submit.btn").click(function(){
  var name = $('#cName').val();
  var email = $('#cEmail').val();
  var societe = $('#cWebsite').val();
  var message = $('#cMessage').val();
  if(name.length != 0 && email.length != 0 && message.length != 0){
    // IF SOCIETE NULL
    if(societe.length == ''){
      societe = 'Aucun site web - société renseigné(e).';
    }
    // IF CARACTERES SPECIAUX
    name = name.replace( "/", ' - ' );
    societe = societe.replace( "/", ' - ' );
    message = message.replace( "/", ' - ' );
    //SEND AJAX
    urlAj = "{{ path('contact-send', {'name' : "thisname", 'email' : 'thisemail', 'message' : 'thismessage', 'societe' : 'thissociete'}) }}";
    urlAj = urlAj.replace( "thisname", name );
    urlAj = urlAj.replace( "thisemail", email );
    urlAj = urlAj.replace( "thismessage", message );
    urlAj = urlAj.replace( "thissociete", societe );
    $.ajax({
        async: true,
        type: 'POST',
        url : urlAj,
        success: function (data) {
          if(data == '1'){
            $(".formForDisabled").fadeOut( "slow" );
            $('#contactmessage').html('Votre message a été envoyé avec succès !');
          } else {
            $('#contactmessage').html(data);
          }
        },
        error: function (){
          $('#contactmessage').html('Problème lors de l\'inscription, si le problème persiste réessayez ultérieurement !');
        },
    });
  } else {
    $('#contactmessage').html('Le nom, email et message sont obligatoire !');
  }
})


